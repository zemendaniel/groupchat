<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="groupchat.gui.MainWindow"
        Width="400" Height="600">
    <Grid>
        <!-- Login Panel -->
        <StackPanel x:Name="LoginPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Enter your nickname:"/>
            <TextBox x:Name="NicknameBox" Width="200" Margin="0,5"/>
            <Button Content="OK" Click="LoginButton_Click"/>
        </StackPanel>

        <!-- Chat Panel -->
        <StackPanel x:Name="ChatPanel" IsVisible="False">
            <ListBox x:Name="MessagesList" Height="500"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="InputBox" Width="300"/>
                <Button Content="Send" Click="Send_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>